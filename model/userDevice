// model/userDevice.js
const mongoose = require('mongoose');

const userDeviceSchema = new mongoose.Schema({
  userId: {
    type: mongoose.Schema.Types.ObjectId,
    ref: 'User',
    required: true,
    index: true
  },
  fcmToken: {
    type: String,
    required: true,
    unique: true,
    index: true
  },
  deviceInfo: {
    platform: {
      type: String,
      enum: ['ios', 'android', 'web'],
      required: true
    },
    deviceId: String,
    appVersion: String,
    osVersion: String
  },
  isActive: {
    type: Boolean,
    default: true
  },
  lastUsed: {
    type: Date,
    default: Date.now
  }
}, { 
  timestamps: true 
});

// Compound index for efficient queries
userDeviceSchema.index({ userId: 1, isActive: 1 });

// Auto-update lastUsed on token refresh
userDeviceSchema.pre('save', function(next) {
  if (this.isModified('fcmToken')) {
    this.lastUsed = new Date();
  }
  next();
});

module.exports = mongoose.model('UserDevice', userDeviceSchema);